<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        id        = "com.practicaltarot.android"
        version   = "1.0.0">

    <name>Practical Tarot Reading</name>

    <description>
        Practical Tarot Reading is an app that lets you to use the Tarot directly from your device without a physical card deck.
    </description>

    <author href="https://github.com/pierremacedo" email="pierremacedodev@gmail.com">
        Pierre Macedo
    </author>

    
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
            <preference name="SplashScreenDelay" value="3000" />


    <preference name="SplashScreen" value="splash"/>
    
    <!-- 
    <preference name="SplashScreenDelay" value="0"/>
    <preference name="FadeSplashScreenDuration" value="0"/>-->

    <!-- Define app icon for each platform. -->
    <icon src="icon.png" />
    <icon src="icons/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="icons/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="icons/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="icons/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="icons/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="icons/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    

    <!-- Define app splash screen for each platform. -->
    
    <splash src="splash.png" />
    <splash src="res/screen/android/ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="res/screen/android/mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="res/screen/android/hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="res/screen/android/xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="res/screen/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <splash src="res/screen/android/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    <splash src="res/screen/android/land-ldpi.png" platform="android" qualifier="land-ldpi" />
    <splash src="res/screen/android/land-mdpi.png" platform="android" qualifier="land-mdpi" />
    <splash src="res/screen/android/land-hdpi.png" platform="android" qualifier="land-hdpi" />
    <splash src="res/screen/android/land-xhdpi.png" platform="android" qualifier="land-xhdpi" />
    <splash src="res/screen/android/land-xxhdpi.png" platform="android" qualifier="land-xxhdpi" />
    <splash src="res/screen/android/land-xxxhdpi.png" platform="android" qualifier="land-xxxhdpi" />
   

</widget>
